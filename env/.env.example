# Environment Configuration Template
# Copy this file to .env.local, .env.staging, or .env.production and update values

# Microsoft Teams Bot Configuration
MicrosoftAppType=MultiTenant
MicrosoftAppId=
MicrosoftAppPassword=
BOT_ID=
BOT_PASSWORD=

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Marketplace API Configuration
MARKETPLACE_API_BASE=https://marketplaceapi.microsoft.com
MARKETPLACE_API_KEY=
MARKETPLACE_SUBSCRIPTION_API_VERSION=2018-08-31
MARKETPLACE_METERING_API_VERSION=2018-08-31

# Marketplace Quota Configuration
DIMENSION_NAME=question
INCLUDED_QUOTA_PER_MONTH=300
OVERAGE_ENABLED=false
OVERAGE_PRICE_PER_UNIT=0.01

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/marketplace_quota
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
# Or for SQL Server:
# DATABASE_URL=mssql://username:password@localhost:1433/marketplace_quota

# Azure API Management
APIM_BASE_URL=https://your-apim-service.azure-api.net
APIM_SUBSCRIPTION_KEY=
APIM_PRODUCT_ID=chatbot-product

# Security
JWT_SECRET_KEY=your-long-random-secret-for-jwt-validation
WEBHOOK_AUTH_TOKEN=your-webhook-auth-token
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# Application Configuration
NODE_ENV=development
PORT=3978
LOG_LEVEL=info

# Azure Resources (for production)
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_APP_SERVICE_NAME=

# Azure Storage (for usage event retries)
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=usage-events

# Event Hub (for audit logging)
EVENT_HUB_CONNECTION_STRING=
EVENT_HUB_NAME=quota-audit

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Key Vault (for production)
AZURE_KEY_VAULT_NAME=

# Feature Flags
ENABLE_USAGE_TRACKING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_MARKETPLACE_INTEGRATION=true
ENABLE_QUOTA_ENFORCEMENT=true

# Development Settings
DEBUG=*
DEVELOPMENT_MODE=true

# Retry Configuration
MAX_RETRY_ATTEMPTS=5
RETRY_INITIAL_DELAY_MS=1000
RETRY_MAX_DELAY_MS=30000
