# =================================================================
# Azure Infrastructure Configuration
# Configuration centralisée pour tous les scripts de déploiement
# =================================================================

# Informations de base du projet
PROJECT_NAME=chatbottez-gpt-4-1
ENVIRONMENT=dev
REGION_SUFFIX=02

# Configuration Azure
AZURE_LOCATION="Canada Central"
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id-here

# Noms des ressources (générés automatiquement)
RESOURCE_GROUP_NAME=rg-${PROJECT_NAME}-${ENVIRONMENT}-${REGION_SUFFIX}

# Configuration PostgreSQL
POSTGRES_VERSION=16
POSTGRES_SKU=Standard_B1ms
POSTGRES_STORAGE_GB=32
POSTGRES_ADMIN_USERNAME=pgadmin
POSTGRES_DATABASE_NAME=gpt41db
POSTGRES_APP_USER=marketplace_user

# Configuration Key Vault
KEY_VAULT_SKU=standard

# Tags par défaut pour toutes les ressources
AZURE_TAG_ENVIRONMENT=${ENVIRONMENT}
AZURE_TAG_PROJECT=${PROJECT_NAME}
AZURE_TAG_PURPOSE=marketplace-quota-management

# Configuration de développement
DEV_ALLOW_ALL_IPS=true
DEV_BACKUP_RETENTION_DAYS=7
DEV_GEO_REDUNDANT_BACKUP=false
DEV_HIGH_AVAILABILITY=false

# Configuration de production (pour référence future)
PROD_ALLOW_ALL_IPS=false
PROD_BACKUP_RETENTION_DAYS=30
PROD_GEO_REDUNDANT_BACKUP=true
PROD_HIGH_AVAILABILITY=true
